{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zephyr",
  "version": "../package.json",
  "identifier": "com.zephyr.app",
  "build": {
    "beforeDevCommand": "bun run vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run vue-tsc --noEmit && vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Zephyr",
        "width": 750,
        "height": 150,
        "resizable": true,
        "decorations": false,
        "center": true,
        "focus": true,
        "alwaysOnTop": true,
        "transparent": true,
        "skipTaskbar": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Zephyr",
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/YOUR_USERNAME/zephyr/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "REPLACE_WITH_YOUR_PUBLIC_KEY_CONTENT"
    },
    "shell": {
      "open": true
    }
  }
}
