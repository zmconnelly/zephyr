{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "haku",
  "version": "0.1.0",
  "identifier": "com.haku.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Haku",
        "width": 500,
        "height": 200,
        "resizable": true,
        "decorations": true,
        "center": true,
        "focus": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "showMenuOnLeftClick": false,
      "tooltip": "Haku Search"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
