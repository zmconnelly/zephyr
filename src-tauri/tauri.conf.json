{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zephyr",
  "version": "0.1.0",
  "identifier": "com.zephyr.app",
  "build": {
    "beforeDevCommand": "bun run vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Zephyr",
        "width": 750,
        "height": 150,
        "resizable": true,
        "decorations": false,
        "center": true,
        "focus": true,
        "alwaysOnTop": true,
        "transparent": true,
        "skipTaskbar": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "tooltip": "Zephyr Search"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
